<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gL"
        android:layout_width="371dp"
        android:layout_height="396dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/gridimg2"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resButton"
        app:rowCount="3">

        <ImageView
            android:id="@+id/iv0"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="22dp"
            android:onClick="bringIn"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/resButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/reload"
        android:onClick="reset"
        android:text="."
        android:textColor="#11FFFFFF"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/gL"
        app:layout_constraintEnd_toStartOf="@+id/resultTxt"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/stroke"
        android:layout_width="297dp"
        android:layout_height="74dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stroke" />

    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="208dp"
        android:layout_height="85dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="620dp"
        android:text="Draw!"
        android:textColor="#000000"
        android:textSize="50sp"
        app:fontFamily="@font/racing_sans_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoBottom"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toEndOf="@+id/blackBigBack"
        app:layout_constraintTop_toBottomOf="@+id/gL"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/titlen" />

    <ImageView
        android:id="@+id/blackBigBack"
        android:layout_width="325dp"
        android:layout_height="259dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resButton"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gL"
        app:layout_constraintVertical_bias="0.494"
        app:srcCompat="@drawable/rectback" />

    <ImageView
        android:id="@+id/vsImgView"
        android:layout_width="141dp"
        android:layout_height="103dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ImgOutDrink"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toEndOf="@+id/ImgOutFood"
        app:layout_constraintTop_toBottomOf="@+id/gL"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/vs" />

    <ImageView
        android:id="@+id/ImgOutDrink"
        android:layout_width="78dp"
        android:layout_height="76dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoBottom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gL"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:id="@+id/ImgOutFood"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="292dp"
        android:layout_marginRight="292dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gL"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>